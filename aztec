#!/bin/bash

set -e

echo "Виберіть дію:"
echo "1. Встановити ноду"
echo "2. Запустити ноду"
echo "3. Зупинити ноду"
read -p "Ваш вибір (1/2/3): " choice

if [[ "$choice" == "1" ]]; then
    echo "Починаємо встановлення ноди Aztec..."
    
    # ... весь код установки ноди тут ...
    
elif [[ "$choice" == "2" ]]; then
    echo "Запускаємо ноду..."
    screen -dmS aztec bash -c "$HOME/run_forever.sh"
    echo "Нода запущена у screen-сесії з іменем 'aztec'."

elif [[ "$choice" == "3" ]]; then
    echo "Зупиняємо ноду..."
    screen -S aztec -X quit
    echo "Нода зупинена."

else
    echo "Невірний вибір. Вихід."
    exit 1
fi
